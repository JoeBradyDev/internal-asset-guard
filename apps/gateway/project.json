{
  "name": "gateway",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/gateway/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/gateway"],
      "options": {
        "command": "npx webpack-cli build --config apps/gateway/webpack.config.js --node-env=production && sleep 2 && mkdir -p dist/apps/gateway/asset && cp libs/shared/proto/asset_service.proto dist/apps/gateway/asset/ && echo '✅ PROTO COPIED TO dist/apps/gateway/asset/' && ls -l dist/apps/gateway/asset/asset_service.proto",
        "parallel": false
      },
      "configurations": {
        "development": {
          "command": "npx webpack-cli build --config apps/gateway/webpack.config.js --node-env=development && sleep 2 && mkdir -p dist/apps/gateway/asset && cp libs/shared/proto/asset_service.proto dist/apps/gateway/asset/ && echo '✅ PROTO COPIED TO dist/apps/gateway/asset/' && ls -l dist/apps/gateway/asset/asset_service.proto"
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "gateway:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "gateway:build:development"
        },
        "production": {
          "buildTarget": "gateway:build:production"
        }
      }
    },
    "prune-lockfile": {
      "dependsOn": ["build"],
      "cache": true,
      "executor": "@nx/js:prune-lockfile",
      "outputs": [
        "{workspaceRoot}/dist/apps/gateway/package.json",
        "{workspaceRoot}/dist/apps/gateway/package-lock.json"
      ],
      "options": {
        "buildTarget": "build"
      }
    },
    "copy-workspace-modules": {
      "dependsOn": ["build"],
      "cache": true,
      "outputs": ["{workspaceRoot}/dist/apps/gateway/workspace_modules"],
      "executor": "@nx/js:copy-workspace-modules",
      "options": {
        "buildTarget": "build"
      }
    },
    "prune": {
      "dependsOn": ["prune-lockfile", "copy-workspace-modules"],
      "executor": "nx:noop"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/apps/gateway"],
      "options": {
        "jestConfig": "apps/gateway/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  }
}
